<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/page_body_bottom"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true">
    <Button
        android:id="@+id/remove_title"
        android:layout_width="120dp"
        android:layout_height="30dp"

        android:background="@android:color/holo_red_light"
        android:text="remove title"/>
    <Button
        android:id="@+id/add_title"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/remove_title"
        android:background="@android:color/holo_green_light"
        android:text="add title"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/page_body_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/change_page_Name"
        android:text="Page_Body_Bottom"
        android:textSize="20dp"/>
    <Button
        android:id="@+id/change_page_Name"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/holo_blue_light"
        android:text="go_to_fragment"/>
</RelativeLayout>
